<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="Chordinator_Light_Theme.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
    </style>
    <style name="Chordinator_Dark_Theme.Theme" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>
</resources>
